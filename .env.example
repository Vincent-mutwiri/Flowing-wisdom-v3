# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Frontend API URL
VITE_API_URL=http://localhost:5000/api

# Backend Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
PORT=5000

# JWT Configuration
JWT_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Inflection AI Configuration
INFLECTION_API_URL=https://api.inflection.ai/external/api/inference
INFLECTION_API_KEY=your-inflection-api-key-here

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_REGION=your-aws-region
AWS_S3_BUCKET_NAME=your-bucket-name

# Public AWS S3 Configuration (for client-side)
NEXT_PUBLIC_AWS_S3_BUCKET_NAME=your-bucket-name
NEXT_PUBLIC_AWS_S3_REGION=your-aws-region
